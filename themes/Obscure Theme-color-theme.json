{
	"name": "Obscure Theme",
	"include":"./dark_modern.json",
	"colors": {
		"editor.background": "#151416",
		"sideBar.background": "#0c0c0c",
		"sideBar.border": "#1b1b1b",
		"sideBarSectionHeader.background": "#131313",
		"terminal.background": "#0c0c0c",
		"panel.background": "#0c0c0c",
		"activityBar.background": "#0c0c0c",
		"editorGroupHeader.tabsBackground": "#0c0c0c",
		"editorGroupHeader.tabsBorder": "#141414",
		"editorGroup.border": "#141414",
		"tab.activeBackground": "#141414",
		"tab.activeBorder": "#141414",
		"tab.inactiveBackground": "#0c0c0c",
		"statusBar.background": "#0c0c0c",
		"commandCenter.background": "#141414",
		"titleBar.activeBackground": "#0c0c0c",
		"titleBar.inactiveBackground": "#0c0c0c",
		"titleBar.border": "#1b1b1b",
		"statusBarItem.remoteBackground": "#5a2a4e",
		"notifications.background": "#181818",
		"activityBarBadge.background": "#753766",
		"editorHoverWidget.background": "#1b1b1b",
		"editorHoverWidget.border": "#1b1b1b",
	},
	"tokenColors": [
        {
            "scope": [
                "keyword.control",
                "source.cpp keyword.operator.new",
                "keyword.operator.delete",
                "keyword.other.using",
                "keyword.other.directive.using",
                "keyword.other.operator",
                "entity.name.operator"
            ],
            "settings": {
                "foreground": "#f4a2f7",
				"fontStyle": "italic"
            }
        },
		{
            "name": "Types declaration and references",
            "scope": [
                "support.class",
                "support.type",
                "entity.name.type",
                "entity.name.namespace",
                "entity.other.attribute",
                "entity.name.scope-resolution",
                "entity.name.class",
                "storage.type.numeric.go",
                "storage.type.byte.go",
                "storage.type.boolean.go",
                "storage.type.string.go",
                "storage.type.uintptr.go",
                "storage.type.error.go",
                "storage.type.rune.go",
                "storage.type.cs",
                "storage.type.generic.cs",
                "storage.type.modifier.cs",
                "storage.type.variable.cs",
                "storage.type.annotation.java",
                "storage.type.generic.java",
                "storage.type.java",
                "storage.type.object.array.java",
                "storage.type.primitive.array.java",
                "storage.type.primitive.java",
                "storage.type.token.java",
                "storage.type.groovy",
                "storage.type.annotation.groovy",
                "storage.type.parameters.groovy",
                "storage.type.generic.groovy",
                "storage.type.object.array.groovy",
                "storage.type.primitive.array.groovy",
                "storage.type.primitive.groovy"
            ],
            "settings": {
                "foreground": "#f0c483"
            }
        },
		// {
		// 	"scope": "entity.name.type",
		// 	"settings": {
		// 		"foreground": "#d8b581"
		// 	}
		// },
		{
            "name": "Variable and parameter name",
            "scope": [
                "variable",
                "meta.definition.variable.name",
                "support.variable",
                "entity.name.variable",
                "constant.other.placeholder"
            ],
            "settings": {
                "foreground": "#aecef8"
            }
        },
		{
            "name": "Function declarations",
            "scope": [
                "entity.name.function",
                "support.function",
                "support.constant.handlebars",
                "source.powershell variable.other.member",
                "entity.name.operator.custom-literal"
            ],
            "settings": {
                "foreground": "#f8eaa8",
				"fontStyle": "italic"
            }
        },
		{
            "scope": [
                "string",
				"string.value",
				"string.tag",
                "meta.embedded.assembly"
            ],
            "settings": {
                "foreground": "#d1988d"
            }
        },
		{
            "scope": [
				"variable.other.constant",
				"support.constant",
				"variable.other.enummember",
				// "variable.other.property",
				// "entity.name.constant"
			],
            "settings": {
                "foreground": "#e96cca",  // Orange pour les constantes
                // "fontStyle": "bold"
            }
        }
	]
}